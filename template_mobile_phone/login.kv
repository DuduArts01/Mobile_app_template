<Login>:
    name: 'Login'
    
    MDFloatLayout:       
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1/5, 1/2, 1/3, 1
            Rectangle:
                size: self.size
                pos: self.pos
    
   
 
            
        MDLabel:
            text: 'App Base'

            font_size: 50
            text_size: self.size
            
            font_name: 'ChunkFive'
            bold: True

            pos: self.pos

            halign: 'center'
            pos_hint: {'center_y': 1.2}

        MDTextField:
            hint_text: "Rectangle mode"
            mode: "rectangle"         

            hint_text: "Enter your username"
            
            id: textUsername
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            
            size_hint_x: 0.5
            size_hint_y: 0.1

        MDFillRoundFlatIconButton:
            icon: "android"
            text: 'Login'

            adaptize_size: True

            size_hint_x: 0.5
            size_hint_y: 0.1          
            
            text_color: 'white' 
            line_color: 0, 0, 0, 1
            icon_color: 'white'
            md_bg_color: "blue"

            pos_hint: {'center_x': 0.5, 'center_y': 0.2}

            

            on_release: root.logincontinue()
        
        

        
                
            
        
                        

